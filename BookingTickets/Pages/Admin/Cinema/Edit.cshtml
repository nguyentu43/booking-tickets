@page "{id?}"
@model BookingTickets.Pages.Admin.Cinema.EditModel
@{
    ViewContext.HttpContext.Items["Title"] = "Edit Cinema";
}

<div class="card">
    <div class="card-header">
        @(Model.Cinema == null ? "Create" : "Edit") Cinema
    </div>
    <div class="card-body">
        <form method="post">
            <div class="text-danger" asp-validation-summary="All"></div>
            <div class="form-group">
                <label asp-for="Cinema.Name"></label>
                <input class="form-control" asp-for="Cinema.Name" />
            </div>
            <div class="form-group">
                <label asp-for="Cinema.Address"></label>
                <input class="form-control" asp-for="Cinema.Address" />
            </div>
            <button class="btn btn-success" type="submit">Save</button>
        </form>
    </div>
</div>